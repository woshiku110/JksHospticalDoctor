<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blueTitleBg">
    <LinearLayout
        android:id="@id/submit_ill_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/item_web_title"></include>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@id/submit_ill_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:cardBackgroundColor="@color/blueTitleBg"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="确定提交"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submit_ill_bottom"
        android:layout_below="@id/submit_ill_top"
        android:background="#E9F0F6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请上传病历照片:"
                    android:textSize="14sp"
                    android:textColor="#4D4D4D"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    />
                <com.woshiku.jkshospticaldoctor.activity.view.MaxHeightLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:max_height="300dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@id/multi_xrecycleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </com.woshiku.jkshospticaldoctor.activity.view.MaxHeightLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请上传处方照片:"
                    android:textSize="14sp"
                    android:textColor="#4D4D4D"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    />
                <com.woshiku.jkshospticaldoctor.activity.view.MaxHeightLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:max_height="300dp">
                    <android.support.v7.widget.RecyclerView
                        android:id="@id/multi_xrecycleview_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </com.woshiku.jkshospticaldoctor.activity.view.MaxHeightLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>