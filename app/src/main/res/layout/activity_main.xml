<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.main.MainActivity"
    android:background="@color/blueTitleBg">
    <com.woshiku.bottomtabbarlib.BottomTabBar
        android:id="@id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabBarBg="#f0f0f0"
        app:tabIconSize="22dp"
        app:tabMargin="4dp"
        app:tabBarHeight="49dp"
        app:tabTextSize="12"
        app:tabRemindMargin="-15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.woshiku.jkshospticaldoctor.activity.view.NoSmoothViewPager
            android:id="@id/main_bottom_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

        </com.woshiku.jkshospticaldoctor.activity.view.NoSmoothViewPager>
    </com.woshiku.bottomtabbarlib.BottomTabBar>
</RelativeLayout>
