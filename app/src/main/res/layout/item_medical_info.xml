<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="55dp">
    <android.support.v7.widget.CardView
        android:id="@id/item_medical_card"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:clickable="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#e2e2e2"
        android:foreground="?android:attr/selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:background="#f7f7f7"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout">
                <TextView
                    android:id="@id/item_medical_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No.2044152"
                    android:textSize="14sp"
                    android:textColor="#676767"
                    />
                <TextView
                    android:id="@id/item_medical_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阿莫西林胶囊"
                    android:textSize="16sp"
                    android:textColor="#676767"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格:20片/瓶"
                android:layout_alignBottom="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:id="@id/item_medical_unit" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_forward"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>