<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 圆角 -->
    <corners
       android:radius="10dp"
        /><!-- 设置圆角半径 -->
    <!-- 大小 -->
    <size
        android:width="100dp"
        android:height="40dp"/><!-- 宽度和高度 -->

    <!-- 填充 -->
    <solid
        android:color="@android:color/transparent"/><!-- 填充的颜色 -->

    <!-- 描边 -->
    <stroke
        android:width="1dp"
        android:color="#3D96E2"
        android:dashGap="1dp"/>
</shape>